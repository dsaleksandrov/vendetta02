= form_for(@advert) do |f|
  - if @advert.errors.any?
    #error_explanation
      %h2
        = pluralize(@advert.errors.count, "error")
        prohibited this advert from being saved:
      %ul
        - @advert.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :employment_type
    %br/
    = f.text_field :employment_type
  .field
    = f.label :town_country
    %br/
    = f.text_area :town_country
  .field
    = f.label :work_category
    %br/
    = f.text_field :work_category
  .field
    = f.label :base_demands
    %br/
    = f.text_area :base_demands
  .field
    = f.label :instructions
    %br/
    = f.text_area :instructions
  .actions
    = f.submit
