 

= form_for @advert do |f|
  -if @advert.errors.any?
    #error_explanation
      %h2= "#{pluralize(@advert.errors.count, "error")} prohibited this advert from being saved:"
      %ul
        - @advert.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
 
  .field
    (Full time/ Contract / Freelance)
    = f.number_field :employment_type
  .field
    (Country / Town of work)
    = f.text_area :town_country
  .field
    (Professiya)
    = f.text_field :work_category
  .field
    (Osnovnie trebovaniya)
    = f.text_area :base_demands
  .field
    (Instrukcii)
    = f.text_area :instructions
  .field
    (Kompaniya)
    = f.text_field :Company
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :desc
    = f.text_area :desc
  .field
    (Opisanie vakansii)
    = f.text_field :site
  .field
    (Logotip)
    = f.text_field :logo
  .field
    = f.label :icon
    = f.text_field :icon
  .field
    (Agent name)
    = f.text_field :agent_name
   
  .actions
    = f.submit 'Save'
