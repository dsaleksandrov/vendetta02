 

= form_for @advert, :html => { :class => 'form-horizontal' } do |f|
  -if @advert.errors.any?
    #error_explanation
      %h2= "#{pluralize(@advert.errors.count, "error")} prohibited this advert from being saved:"
      %ul
        - @advert.errors.full_messages.each do |msg|
          %li= msg

  %fieldset{:style=>"margin-top:50px;"}
    %legend Создание нового объявления
    .control-group
      = f.label :email,:class => "control-label"
      .controls
        = f.text_field :email
    .control-group
      %label{:class=>"control-label"} Город
      .controls
        = f.text_field :town_country
    .control-group
      %label{:class=>"control-label"} Кого ищем?
      .controls
        = f.text_field :work_category
    .control-group
      %label{:class=>"control-label"} Основные требования
      .controls
        = f.text_field :base_demands
    .control-group
      %label{:class=>"control-label"} Название компании
      .controls
        = f.text_field :Company
  .actions
    = f.submit 'Save'
  /.field
  /  = f.label :name
  /  = f.text_field :name
  /.field
  /  = f.label :desc
  /  = f.text_area :desc
  /.field
  /  (Opisanie vakansii)
  /  = f.text_field :site 
  /.field
  /  (Logotip)
  /  = f.text_field :logo
  /.field
  /  = f.label :icon
  /  = f.text_field :icon
  /.field
  /  (Agent name)
  / = f.text_field :agent_name
  