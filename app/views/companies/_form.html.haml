= form_for(@company) do |f|
  - if @company.errors.any?
    #error_explanation
      %h2
        = pluralize(@company.errors.count, "error")
        prohibited this company from being saved:
      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :desc
    %br/
    = f.text_area :desc
  .field
    = f.label :site
    %br/
    = f.text_field :site
  .field
    = f.label :logo
    %br/
    = f.text_field :logo
  .field
    = f.label :icon
    %br/
    = f.text_field :icon
  .field
    = f.label :agent_name
    %br/
    = f.text_field :agent_name
  
  .actions
    = f.submit
